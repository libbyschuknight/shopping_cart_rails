
<div id = "cart-view">
  <h2> Welcome to your shopping cart <%= @user.name %> </h2>
  <br>
  <h3>Your orders</h3>
  <p>

  <ul>
    <% @user.orders.each do |order| %>
    <li>
      <%= order.id %> &nbsp;
      <%= order.try(:product).try(:name) %> &nbsp; &nbsp;
      <%= button_to 'Remove Item', order, method: 'delete' %>
    </li>
    <% end %>
  </ul>


  <%= button_to 'Remove All Items', remove_all_path, method: 'delete' %>

<!--   <form class = "remove-all" action="/delete_all_items" method="POST">
    <input type ="submit" value="Remove ALL items from your cart">
  </form> -->

</div>
