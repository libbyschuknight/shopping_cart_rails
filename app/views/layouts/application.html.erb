<!DOCTYPE html>
<html>
  <head>
    <title>FakerShoppingCart</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id = "container">
      <header>
        <h1>faker.com</h1>
        <nav>
           <ul>
              <li>
                <a href="/"><button type="button">Products</button></a>
                <%= link_to products_path %>
                <!-- how to link to root in erb convention -->

              </li>
              <li>
                <a href="/show_cart"><button type="button">Your Cart</button></a>
              </li>
              <li>
                <form action="/sign_out" method="POST">
                  <input type ="submit" value="Sign Out">
                </form>
              </li>
           </ul>
         </nav>
      </header>



      <main role="main">
        <%= yield %>
      </main>

      <footer>
        <p>faker.com &copy; 2015</p>
      </footer>
    </div>

  </body>
</html>





